<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">




	<bean id="erpDispenseDrugOrderDao" class="org.openmrs.module.emrapi.erpdrug_order.Dao.impl.ErpDispenseDrugOrderImpl">
		<property name="sessionFactory">
			<ref bean="dbSessionFactory" />
		</property>
	</bean>


	<bean id="erpdrugOrderSevice" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean id="erpdrugOrderSeviceTarget" class="org.openmrs.module.emrapi.erpdrug_order.service.impl.ErpdrugOrderSeviceImpl">
				<constructor-arg  ref="erpDispenseDrugOrderDao" />

			</bean>
		</property>
		<property name="preInterceptors">
			<ref bean="serviceInterceptors" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="transactionAttributeSource" />
		</property>
	</bean>


	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.emrapi.erpdrug_order.service.ErpdrugOrderSevice</value>
				<ref bean="erpdrugOrderSevice" />
			</list>
		</property>
	</bean>
</beans> 