<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    
    <changeSet author="Sushant, Patil" id="20192006-1030">
        <createTable tableName="allergy_New">
            <column name="allergy_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="previous_allergy_id" type="int"/>
            <column name="patient_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="concept_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="allergy_non_coded" type="varchar(1024)"/>
            <column name="onset_date" type="datetime"/>
            <column name="additional_detail" type="varchar(1024)"/>
            <column name="end_date" type="datetime"/>
            <column name="end_reason" type="int"/>
            <column name="creator" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="voided" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="voided_by" type="int"/>
            <column name="date_voided" type="datetime"/>
            <column name="void_reason" type="varchar(255)"/>
            <column name="uuid" type="char(38)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

    </changeSet>
    
    <changeSet author="Sushant Patil" id="20192006-1130">
        <addForeignKeyConstraint constraintName="allergies_previous_allergy_id_fk" baseTableName="allergy_New"
                                 baseColumnNames="previous_allergy_id" referencedTableName="allergy_New"
                                 referencedColumnNames="allergy_id"/>
        <addForeignKeyConstraint baseColumnNames="patient_id" baseTableName="allergy_New"
                                 constraintName="allergies_patient_fk" deferrable="false" initiallyDeferred="false"
                                 onUpdate="CASCADE" referencedColumnNames="patient_id" referencedTableName="patient"/>
        <addForeignKeyConstraint baseColumnNames="concept_id" baseTableName="allergy_New"
                                 constraintName="allergies_concept_fk"
                                 deferrable="false" initiallyDeferred="false" referencedColumnNames="concept_id"
                                 referencedTableName="concept"/>
        <addForeignKeyConstraint baseColumnNames="end_reason" baseTableName="allergy_New"
                                 constraintName="allergies_end_reason_fk"
                                 deferrable="false" initiallyDeferred="false" referencedColumnNames="concept_id"
                                 referencedTableName="concept"/>
        <addForeignKeyConstraint baseColumnNames="creator" baseTableName="allergy_New"
                                 constraintName="allergies_created_by_fk"
                                 deferrable="false" initiallyDeferred="false" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
        <addForeignKeyConstraint baseColumnNames="voided_by" baseTableName="allergy_New"
                                 constraintName="allergies_voided_by_fk"
                                 deferrable="false" initiallyDeferred="false" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet author="Shruthi, Sravanthi" id="20192006-1144">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="allergy_uuid_index"/>
            </not>
        </preConditions>
        <comment>Creating unique index on allergy.uuid column</comment>
        <createIndex tableName="allergy_New" unique="true" indexName="allergy_uuid_index">
            <column name="uuid"/>
        </createIndex>
    </changeSet>
    
    <changeSet author="Sushant, Patil" id="20190828-1309">
        <createTable tableName="erpdrug_order">
       		<column name="id" type="int" autoIncrement="true" >
               <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="int" >
                <constraints  nullable="false"/>
            </column>
            <column name="patient_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="dispensed" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="arv_dispensed" type="boolean"/>
            <column name="first_arv_dispensed" type="boolean"/>
            <column name="dispensed_date" type="datetime"/>
            <column name="encounter_id" type="int"/>
            <column name="location_id" type="int"/>
            <column name="creator" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="date_created" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="uuid" type="char(38)">
                <constraints nullable="true"/>
            </column>
        </createTable>

    </changeSet>
    
</databaseChangeLog>
